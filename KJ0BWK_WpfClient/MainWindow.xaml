<Window x:Class="KJ0BWK_WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KJ0BWK_WpfClient"
        mc:Ignorable="d"
        Title="Football editor" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Players}" SelectedItem="{Binding SelectedPlayer}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Button Content="Create Actor" Command="{Binding CreatePlayerCommand}" Margin="10" Padding="10"/>
            <Button Content="Delete Actor" Command="{Binding DeletePlayerCommand}" Margin="10" Padding="10"/>
            <Button Content="Update Actor" Command="{Binding UpdatePlayerCommand}" Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
